<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".local_select">    <!-- TODO: Update blank fragment layout -->    <LinearLayout        android:layout_width="match_parent"        android:orientation="vertical"        android:layout_height="wrap_content">        <LinearLayout            android:background="@drawable/lin_border"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:id="@+id/locallist1"            android:layout_marginBottom="7dp"            android:layout_marginTop="7dp"            >            <ImageView                android:id="@+id/locallist1_1"                android:layout_height="wrap_content"                android:layout_width="wrap_content"                android:scaleType="fitXY"                android:src="@mipmap/local_icon" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1">            </LinearLayout>            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="24sp"                android:layout_marginTop="19dp"                android:textColor="@android:color/background_dark"                android:text="本地音乐"                android:layout_weight="4"                android:id="@+id/locallist1_2"                />            <ImageView                android:layout_width="wrap_content"                android:id="@+id/locallist1_3"                android:layout_weight="1"                android:src="@mipmap/rightarrow"                android:layout_height="match_parent" />        </LinearLayout>        <LinearLayout            android:background="@drawable/lin_border"            android:layout_marginTop="7dp"            android:layout_marginBottom="7dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:id="@+id/locallist2"            >            <ImageView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:src="@mipmap/recent"                android:id="@+id/locallist2_1"                />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1">            </LinearLayout>            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="24sp"                android:textColor="@android:color/background_dark"                android:text="最近播放"                android:layout_marginTop="19dp"                android:layout_weight="4"                android:id="@+id/locallist2_2"                />            <ImageView                android:layout_width="wrap_content"                android:id="@+id/locallist2_3"                android:layout_weight="1"                android:src="@mipmap/rightarrow"                android:layout_height="match_parent" />        </LinearLayout>        <LinearLayout            android:background="@drawable/lin_border"            android:layout_marginTop="7dp"            android:layout_marginBottom="7dp"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:id="@+id/locallist3"            >            <ImageView                android:layout_width="73dp"                android:layout_height="73dp"                android:src="@mipmap/collect"                android:id="@+id/locallist3_1"                />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1">            </LinearLayout>            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="24sp"                android:textColor="@android:color/background_dark"                android:text="我的收藏"                android:layout_marginTop="19dp"                android:layout_weight="4"                android:id="@+id/locallist3_2"                />            <ImageView                android:layout_width="wrap_content"                android:id="@+id/locallist3_3"                android:layout_weight="1"                android:src="@mipmap/rightarrow"                android:layout_height="match_parent" />        </LinearLayout>    </LinearLayout></FrameLayout>